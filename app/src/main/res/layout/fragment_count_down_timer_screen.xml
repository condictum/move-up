<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CountDownTimerScreenFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <cn.iwgang.countdownview.CountdownView
            android:id="@+id/cronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:isSuffixTextBold="true"
            app:layout_constraintTop_toTopOf="parent"
            app:suffixHour=":"
            app:isHideTimeBackground="false"
            app:isShowHour="true"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:suffixMinute=":"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:timeBgColor="@color/primary_color"
            app:timeBgDivisionLineColor="@color/black"
            app:timeBgRadius="40dp"
            app:timeBgSize="80dp"
            app:timeTextColor="@color/white"
            app:timeTextSize="32dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/cronoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:src="@drawable/ic_baseline_timer_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>